@model ToDoList


<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ToDoListId" />
    <div class="form-group">
        <label class="control-label" asp-for="TaskName"></label>
        <input class="form-control" asp-for="TaskName" type="text" />
        <span class="text-danger" asp-validation-for="TaskName"></span>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="TaskDescription"></label>
        <input class="form-control" asp-for="TaskDescription" type="text" />
        <span class="text-danger" asp-validation-for="TaskDescription"></span>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="TaskStatus"></label>
        <select class="form-control" asp-for="TaskStatus">
            <option value="Em Andamento" selected>Em Andamento</option>
            <option value="Concluida">Concluída</option>
        </select>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="TaskType"></label>
        <input class="form-control" asp-for="TaskType" type="text" />
        <span class="text-danger" asp-validation-for="TaskType"></span>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="StartDate"></label>
        <input class="form-control" asp-for="StartDate" />
        <span class="text-danger" asp-validation-for="StartDate"></span>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="EndDate"></label>
        <input class="form-control" asp-for="EndDate" type="date" />
        <span class="text-danger" asp-validation-for="EndDate"></span>
    </div>

    <button class="btn btn-primary" type="submit">Salvar</button>

</form>
